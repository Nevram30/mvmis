// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // NOTE: When using mysql or sqlserver, uncomment the @db.Text annotations in model Account below
  // Further reading:
  // https://next-auth.js.org/adapters/prisma#create-the-prisma-schema
  // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
  url      = env("DATABASE_URL")
}

// Necessary for Next auth
model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String? // @db.Text
  access_token             String? // @db.Text
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String? // @db.Text
  session_state            String?
  user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  refresh_token_expires_in Int?

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum UserRole {
  ADMIN
  MANAGER
  SECRETARY
  MECHANIC
  PROPRIETOR
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          UserRole  @default(PROPRIETOR)
  accounts      Account[]
  sessions      Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Vehicle {
  id            String         @id @default(cuid())
  plateNumber   String         @unique
  make          String
  engineNumber  String         @unique
  purchaseDate  DateTime
  purchaseCost  Decimal        @db.Decimal(10, 2)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  repairCosts   RepairCost[]
  sellingPrices SellingPrice[]
  registrations Registration[]
}

model RepairCost {
  id             String   @id @default(cuid()) @map("id_repair_cost")
  vehicleId      String   @map("id_vehicle")
  fuelCost       Decimal  @default(0) @map("fuel_cost") @db.Decimal(10, 2)
  laborCost      Decimal  @default(0) @map("labor_cost") @db.Decimal(10, 2)
  materialCost   Decimal  @default(0) @map("material_cost") @db.Decimal(10, 2)
  otherCost      Decimal  @default(0) @map("other_cost") @db.Decimal(10, 2)
  mobilization   Decimal  @default(0) @db.Decimal(10, 2)
  licensing      Decimal  @default(0) @db.Decimal(10, 2)
  totalOtherCost Decimal  @default(0) @map("total_other_cost") @db.Decimal(10, 2)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  vehicle Vehicle @relation(fields: [vehicleId], references: [id], onDelete: Cascade)

  @@map("repair_cost")
}

model SellingPrice {
  id           String   @id @default(cuid()) @map("id_selling_price")
  vehicleId    String   @map("id_vehicle")
  sellingPrice Decimal  @map("selling_price") @db.Decimal(10, 2)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  vehicle Vehicle @relation(fields: [vehicleId], references: [id], onDelete: Cascade)

  @@map("selling_price")
}

enum RegistrationStatus {
  DEED_OF_SALE
  ID
  MAYOR_PERMIT
}

model Registration {
  id               String   @id @default(cuid()) @map("id_registration")
  vehicleId        String   @map("id_vehicle")
  soldTo           String   @map("sold_to")
  registrationDate DateTime @map("registration_date")
  deedOfSale       Boolean  @default(false) @map("deed_of_sale")
  idStatus         Boolean  @default(false) @map("id_status")
  mayorPermit      Boolean  @default(false) @map("mayor_permit")
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  vehicle Vehicle @relation(fields: [vehicleId], references: [id], onDelete: Cascade)

  @@map("registration")
}

enum AssignmentType {
  OUTSIDE_LABOR
  INHOUSE
}

model Customer {
  id            String             @id @default(cuid()) @map("id_customer")
  customerName  String             @map("customer_name")
  address       String
  telNo         String?            @map("tel_no")
  mobileNo      String?            @map("mobile_no")
  tin           String?
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt
  orderRequests OrderRequisition[]

  @@map("customer")
}

model Contractor {
  id             String            @id @default(cuid()) @map("id_contractor")
  contractorName String            @map("contractor_name")
  address        String
  telNo          String?           @map("tel_no")
  mobileNo       String?           @map("mobile_no")
  tin            String?
  assignment     AssignmentType
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt
  orderRequests  OrderRequisition[]

  @@map("contractor")
}

enum OrderStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

model OrderRequisition {
  id                              String                    @id @default(cuid()) @map("id_order_requisition")
  customerId                      String                    @map("id_customer")
  contractorId                    String                    @map("id_contractor")
  make                           String
  plateNumber                    String                    @map("plate_number")
  engineNumber                   String                    @map("engine_number")
  orderDate                      DateTime                  @default(now()) @map("order_date")
  totalLaborAndServicesExpenses  Decimal                   @default(0) @map("total_labor_and_services_expenses") @db.Decimal(10, 2)
  totalPartsAndMaterialExpenses  Decimal                   @default(0) @map("total_parts_and_material_expenses") @db.Decimal(10, 2)
  overallTotal                   Decimal                   @default(0) @map("overall_total") @db.Decimal(10, 2)
  generatedOrNumber              String?                   @map("generated_or_number")
  status                         OrderStatus               @default(PENDING)
  notes                          String?
  createdAt                      DateTime                  @default(now())
  updatedAt                      DateTime                  @updatedAt

  customer      Customer                @relation(fields: [customerId], references: [id], onDelete: Cascade)
  contractor    Contractor              @relation(fields: [contractorId], references: [id], onDelete: Cascade)
  laborItems    OrderLaborItem[]
  materialItems OrderMaterialItem[]

  @@map("order_requisition")
}

model OrderLaborItem {
  id                    String           @id @default(cuid()) @map("id_labor_item")
  orderRequisitionId    String           @map("id_order_requisition")
  itemNumber            Int              @map("item_number")
  description           String
  expenses              Decimal          @default(0) @db.Decimal(10, 2)
  mechanic              String?
  assignment            String?
  status                String?
  createdAt             DateTime         @default(now())
  updatedAt             DateTime         @updatedAt

  orderRequisition OrderRequisition @relation(fields: [orderRequisitionId], references: [id], onDelete: Cascade)
  laborRepairForms LaborRepairForm[]

  @@map("order_labor_item")
}

model OrderMaterialItem {
  id                    String           @id @default(cuid()) @map("id_material_item")
  orderRequisitionId    String           @map("id_order_requisition")
  itemNumber            Int              @map("item_number")
  quantity              Int?             @default(1)
  description           String
  expenses              Decimal          @default(0) @db.Decimal(10, 2)
  createdAt             DateTime         @default(now())
  updatedAt             DateTime         @updatedAt

  orderRequisition OrderRequisition @relation(fields: [orderRequisitionId], references: [id], onDelete: Cascade)

  @@map("order_material_item")
}

model LaborRepairForm {
  id                    String                @id @default(cuid()) @map("id_labor_repair_form")
  lrfNumber             String                @unique @map("lrf_number")
  orderLaborItemId      String                @map("id_order_labor_item")
  contractorName        String                @map("contractor_name")
  date                  DateTime              @default(now())
  make                  String
  plateNumber           String                @map("plate_number")
  engineNumber          String                @map("engine_number")
  amount                Decimal               @db.Decimal(10, 2)
  orNumber              String?               @map("or_number")
  scopeOfWorkDetails    String?               @map("scope_of_work_details") @db.Text
  totalCashAdvance      Decimal               @default(0) @map("total_cash_advance") @db.Decimal(10, 2)
  reviewedBy            DateTime?             @map("reviewed_by")
  approvedBy            DateTime?             @map("approved_by")
  createdAt             DateTime              @default(now())
  updatedAt             DateTime              @updatedAt

  orderLaborItem        OrderLaborItem        @relation(fields: [orderLaborItemId], references: [id], onDelete: Cascade)
  cashAdvances          LaborRepairFormCashAdvance[]

  @@map("labor_repair_form")
}

model LaborRepairFormCashAdvance {
  id                    String           @id @default(cuid()) @map("id_cash_advance")
  laborRepairFormId     String           @map("id_labor_repair_form")
  date                  DateTime
  amount                Decimal          @db.Decimal(10, 2)
  balance               Decimal          @db.Decimal(10, 2)
  createdAt             DateTime         @default(now())
  updatedAt             DateTime         @updatedAt

  laborRepairForm       LaborRepairForm  @relation(fields: [laborRepairFormId], references: [id], onDelete: Cascade)

  @@map("labor_repair_form_cash_advance")
}
